<?xml version="1.0" encoding="ISO-8859-1"?>

<settings author="Last additions by JW" date="03/03/2016">
  <!-- global Settings for the measurement--> 
  <global>
	<source>Xurich with SiPMs</source>       		  <!-- What is measured? -->
	<notes>2 SiPMs and 1 PMT</notes> 		          <!-- Comments -->
	<user>Frederic</user>                                     <!-- Last user which used the ADC-->
	<path>~/xenoscope/test_data/</path> <!-- Path -->
	<daq_version>5.0.0</daq_version>                      	  <!-- DAQ Version-->
	<nb_evts>100000</nb_evts>                            	  <!-- Number of events-->
	<nb_evts_per_file>500000</nb_evts_per_file>           	  <!-- Number of events/file-->
	<store_data>1</store_data>                            	  <!-- Store Data: 0: No, 1:ROOT, 2:.txt, 3: binary-->
	<displaytime>1</displaytime>			          <!-- Status output -->
  </global>

  <!--*************************************************************************************************** -->
  <!-- ADC CAEN specific settings -->
  <adc>	
    <!-- global ADC settings -->
    <global>
	<ADCType>1</ADCType>					   <!-- Which ADC 0: 1720 1: 1724 2:1730D -->
	<nb_modules>2</nb_modules>                                 <!-- **Total number of Modules in the daisy Chain -->
	<link_in_chain>0</link_in_chain>                           <!-- Position of the board in the link -->
	<nb_chs>8</nb_chs>                                         <!-- **Total number of channels of every Module -->

	<address_2>00000000</address_2>				   <!-- Adress of the module-->
	<address_1>00000000</address_1> 
	<address_0>77770000</address_0>

      <!-- Activate channels to read out. Every module starts from 0 -->

	<!-- Threshold:  0 = Off, [1,16000] = On -->
      	
	<ch_0>0</ch_0>                       	
      	<ch_1>15950</ch_1>
     	<ch_2>0</ch_2>                            
      	<ch_3>0</ch_3>                           
      	<ch_4>0</ch_4>                          
      	<ch_5>0</ch_5>                         
      	<ch_6>0</ch_6>                        
      	<ch_7>0</ch_7>

    	<ch_8>0</ch_8>                               		           	
        <ch_9>130</ch_9>
        <ch_10>0</ch_10>
        <ch_11>0</ch_11>
        <ch_12>0</ch_12>
        <ch_13>0</ch_13>
        <ch_14>0</ch_14>
        <ch_15>0</ch_15>

	<ch_16>0</ch_16>
	<ch_17>130</ch_17>
	<ch_18>0</ch_18>
	<ch_19>0</ch_19>
	<ch_20>0</ch_20>
	<ch_21>0</ch_21>
	<ch_22>0</ch_22>
	<ch_23>0</ch_23>

	 <!-- Channel polarity: 0 = Positive, 1 = Negative -->

	<ch_0_pol>0</ch_0_pol>
        <ch_1_pol>1</ch_1_pol>
        <ch_2_pol>0</ch_2_pol>
        <ch_3_pol>0</ch_3_pol>
        <ch_4_pol>0</ch_4_pol>
        <ch_5_pol>0</ch_5_pol>
        <ch_6_pol>0</ch_6_pol>
        <ch_7_pol>0</ch_7_pol>

        <ch_8_pol>0</ch_8_pol>
        <ch_9_pol>0</ch_9_pol>
        <ch_10_pol>0</ch_10_pol>
        <ch_11_pol>0</ch_11_pol>
        <ch_12_pol>0</ch_12_pol>
        <ch_13_pol>0</ch_13_pol>
        <ch_14_pol>0</ch_14_pol>
        <ch_15_pol>0</ch_15_pol>

        <ch_16_pol>0</ch_16_pol>
        <ch_17_pol>0</ch_17_pol>
        <ch_18_pol>0</ch_18_pol>
        <ch_19_pol>0</ch_19_pol>
        <ch_20_pol>0</ch_20_pol>
        <ch_21_pol>0</ch_21_pol>
        <ch_22_pol>0</ch_22_pol>
        <ch_23_pol>0</ch_23_pol>

      <!-- !!!All Events are reduced by 10 Samples due to DAC Problems in the last samples!!!! -->
      
        <memoryorganisation>16</memoryorganisation>  		<!-- **Blockorganisation of the ADC-->
        <custom_size>6000</custom_size>      			<!-- **Custom event size in samples (must be < nb_samples_per_event) -->
        <posttrigger>5900</posttrigger> 			<!-- **samples after trigger -->
        <sampling_freq>100000000</sampling_freq>		<!-- **sampling frequency -->
        <voltage_range>2.25</voltage_range>			<!-- **voltage range of ADC/DAC -->
        <sample_size_ADC>14</sample_size_ADC>			<!-- **sampling width in bits (ADC) -->
        <sample_size_DAC>16</sample_size_DAC>			<!-- **sampling width in bits (DAC) -->

        <baseline>0</baseline>  				<!-- **position of baseline (channels) -->	
        <!-- **If baseline is set to 0, set each channels separetly** --> 
	<baseline_0>100</baseline_0>
	<baseline_1>16000</baseline_1>
	<baseline_2>100</baseline_2>
	<baseline_3>100</baseline_3>
	<baseline_4>100</baseline_4>
	<baseline_5>100</baseline_5>
	<baseline_6>100</baseline_6>
	<baseline_7>100</baseline_7>

	<baseline_8>100</baseline_8>
	<baseline_9>100</baseline_9>
	<baseline_10>100</baseline_10>
	<baseline_11>100</baseline_11>
	<baseline_12>100</baseline_12>
	<baseline_13>100</baseline_13>
	<baseline_14>100</baseline_14>
	<baseline_15>100</baseline_15>
	
	<baseline_16>0</baseline_16>
	<baseline_17>100</baseline_17>
	<baseline_18>0</baseline_18>
	<baseline_19>0</baseline_19>
	<baseline_20>0</baseline_20>
	<baseline_21>0</baseline_21>
	<baseline_22>0</baseline_22>
	<baseline_23>0</baseline_23>
	
        <baselineiteration>10</baselineiteration>			<!-- **How many iterations for baseline calculation -->
    </global>
    
    <!--Trigger Settings -->
	<triggerSettings>
		<trigger>0</trigger>					<!-- **0:ext trig, 1:Software trig, 2:Self Trigger, Anything other: checks "per module values" -->
	   	<!-- If the trigger value is different than 0, 1 or 2, the "per module values" are looked up -->
		<trigger_module_0>2</trigger_module_0>
		<trigger_module_1>0</trigger_module_1>
 		<trigger_module_2>0</trigger_module_2>

		<!-- Option external trig and trg-out-->
		<TTL>1</TTL>						<!-- **TTL On (1) or NIM On (0) -->
   
		<!-- Option Software Trig-->
		<SoftwareRate>800</SoftwareRate>			<!-- **Rate of the Software Trigger in Hz -->

                <!-- Option Channel Trig v1724/v1720-->
                <trig0>0</trig0>    <!-- Which Channel generates a board trigger 0: Deactivated 1:Activated-->
                <trig1>1</trig1>
                <trig2>0</trig2>
                <trig3>0</trig3>
                <trig4>0</trig4>
                <trig5>0</trig5>
                <trig6>0</trig6>
                <trig7>0</trig7>
               
		<trig8>0</trig8>
                <trig9>1</trig9>
                <trig10>0</trig10>
                <trig11>0</trig11>
                <trig12>0</trig12>
                <trig13>0</trig13>
                <trig14>0</trig14>
                <trig15>0</trig15>
                
		<trig16>0</trig16>
                <trig17>1</trig17>
                <trig18>0</trig18>
                <trig19>0</trig19>
                <trig20>0</trig20>
                <trig21>0</trig21>
                <trig22>0</trig22>
                <trig23>0</trig23>
 	    
   </triggerSettings>

   <!--Zero Length Encoding -->
    <ZLE>
	<ZLEActivated>1</ZLEActivated>   
	<ZLE_Left>50</ZLE_Left>			<!-- Acquired samples before the threshold -->	
	<ZLE_Right>100</ZLE_Right> 			<!-- Acquired samples after the threshold -->
    </ZLE>   
</adc>  
 
   <!-- Settings for graphical display "Oscilloscope mode" -->
    <graphics>
	<ydisplay>2</ydisplay>						<!-- ** 0:standard, 1:manual, 2:auto -->
	<yaxis_low>9980</yaxis_low>					<!-- ** lower border of y-axis display -->
	<yaxis_high>10020</yaxis_high>					<!-- ** upper border -->
    </graphics>
</settings>
